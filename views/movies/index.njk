{% extends "partials/layout.njk" %}
{% block title %}Home {%endblock%}
{% block content %}
    <a href= "/movies/add">Add</a>
<style>
table, th, td {
    border: 1px solid black;
}
</style>
<table>
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Year</th>
    </thead>

<tbody>
    {% for movie in movies %}
    <tr>
        <td>{{movie.id}}</td>
        <td>{{movie.name}}</td>
        <td>{{movie.year}}</td>
        <td>
            <a href="/movies/view?id={{movie.id}}">View</a>
            <a href="/movies/edit/{{movie.id}}">Edit</a>
            <a href="/movies/delete/{{movie.id}}">Delete</a>
        {% endfor %}
    </tbody>
</table>
    <ul>
        {% for movie in movies %}
        <li> {{ movie.name }}</li>
        {% endfor %}
        </ul>
{% endblock %}